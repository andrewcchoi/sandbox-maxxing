{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Secrets configuration catalog for DevContainer configurations",
  "metadata": {
    "last_updated": "2026-02-08",
    "usage": "Skills reference this file for secret handling patterns and validation"
  },
  "secret_types": {
    "vscode_input": {
      "description": "VS Code input variables for development credentials",
      "secrets": {
        "githubToken": {
          "env_name": "GITHUB_TOKEN",
          "description": "GitHub personal access token (repo scope)",
          "password": true,
          "mode_minimum": "advanced"
        },
        "openaiKey": {
          "env_name": "OPENAI_API_KEY",
          "description": "OpenAI API key (starts with sk-)",
          "password": true,
          "mode_minimum": "advanced"
        },
        "anthropicKey": {
          "env_name": "ANTHROPIC_API_KEY",
          "description": "Anthropic API key",
          "password": true,
          "mode_minimum": "advanced"
        },
        "dbPassword": {
          "env_name": "POSTGRES_PASSWORD",
          "description": "Database password",
          "password": true,
          "default": "devpassword",
          "mode_minimum": "advanced"
        }
      }
    },
    "host_mount": {
      "description": "Cloud credentials mounted from host",
      "mounts": {
        "aws": {
          "source": "${localEnv:HOME}/.aws",
          "target": "/home/node/.aws",
          "description": "AWS CLI credentials",
          "mode_minimum": "advanced"
        },
        "gcloud": {
          "source": "${localEnv:HOME}/.config/gcloud",
          "target": "/home/node/.config/gcloud",
          "description": "Google Cloud CLI credentials",
          "mode_minimum": "advanced"
        },
        "azure": {
          "source": "${localEnv:HOME}/.azure",
          "target": "/home/node/.azure",
          "description": "Azure CLI credentials",
          "mode_minimum": "advanced"
        }
      }
    }
  },
  "mode_defaults": {
    "basic": {
      "description": "Development defaults, no secret management",
      "secret_count": 0,
      "methods": []
    },
    "advanced": {
      "description": "Comprehensive secret management",
      "secret_count": 4,
      "methods": ["vscode_input", "host_mount"]
    },
    "yolo": {
      "description": "Full flexibility, all methods available",
      "secret_count": "unlimited",
      "methods": ["vscode_input", "host_mount"]
    }
  },
  "best_practices": {
    "never": [
      "Use ARG for secrets (persists in image history)",
      "Use ENV for secrets (visible in docker inspect)",
      "Commit credentials to Git",
      "Share .env files with real credentials"
    ],
    "always": [
      "Use VS Code inputs for development",
      "Use Docker secrets for production",
      "Add .env to .gitignore",
      "Create .env.example with placeholders",
      "Rotate secrets regularly"
    ]
  }
}
